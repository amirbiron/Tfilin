[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
# E203: whitespace before ':'
# E501: line too long (handled by black)
# W503: line break before binary operator
# F401: imported but unused
# F841: local variable assigned but never used
ignore = E203,E501,W503,F401,F841
per-file-ignores =
    __init__.py:F401
    tests/*.py:F401,F841